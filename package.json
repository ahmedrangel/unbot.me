    "eslint": "^8.56.0",
    "nuxt": "^3.10.2",
    "nuxt-auth-utils": "^0.0.16",
    "nuxt-icon": "^0.6.8",
    "nuxt-primevue": "^0.3.0",
    "nuxt-simple-sitemap": "^4.4.1",
    "stylelint-config-standard": "^36.0.0"
  },
  "dependencies": {

{
  "name": "unbot.me",
  "version": "1.0.0",
  "description": "unbotme is a bot for Twitch designed to automatically ban identified bots that persistently lurk in channels.",
  "author": "Ahmed Rangel",
  "type": "module",
  "homepage": "https://github.com/ahmedrangel/unbot.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedrangel/unbot.me"
  },
  "bugs": {
    "url": "https://github.com/ahmedrangel/unbot.me/issues"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --port=5173 --host",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:migrate": "drizzle-kit generate --config=.config/drizzle.json",
    "lint": "pnpm lint:eslint --fix && pnpm lint:stylelint --fix",
    "lint:eslint": "eslint --config .config/eslint.mjs",
    "lint:stylelint": "stylelint \"**/*.{css,scss,sass}\" --config .config/stylelint.json"
  },
  "devDependencies": {
    "@nuxt/eslint": "^0.6.1",
    "@nuxt/icon": "^1.6.1",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/sitemap": "^6.1.4",
    "@types/bootstrap": "^5.2.10",
    "better-sqlite3": "^11.5.0",
    "drizzle-kit": "^0.27.0",
    "drizzle-orm": "^0.36.0",
    "eslint": "^9.13.0",
    "nuxt": "^3.13.2",
    "nuxt-auth-utils": "^0.5.1",
    "sass": "^1.80.5",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0"
  },
  "dependencies": {
    "@primevue/nuxt-module": "^4.1.1",
    "bootstrap": "^5.3.3",
    "primeicons": "^7.0.0",
    "socket.io-client": "^4.8.1"
  },
  "packageManager": "pnpm@9.12.3"
}

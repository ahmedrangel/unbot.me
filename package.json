  "description": "unbotme is a bot for Twitch designed to automatically ban identified bots that persistently lurk in channels.",
  "author": "Ahmed Rangel",
  "type": "module",
  "homepage": "https://github.com/ahmedrangel/unbot.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedrangel/unbot.me"
  },
  "bugs": {
    "url": "https://github.com/ahmedrangel/unbot.me/issues"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --port=5173 --host",
    "generate": "nuxt generate",

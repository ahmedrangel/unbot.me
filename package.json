{
  "name": "unbot.me",
  "version": "1.0.0",
  "description": "unbotme is a bot for Twitch designed to automatically ban identified bots that persistently lurk in channels.",
  "author": "Ahmed Rangel",
  "type": "module",
  "homepage": "https://github.com/ahmedrangel/unbot.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedrangel/unbot.me"
  },
  "bugs": {
    "url": "https://github.com/ahmedrangel/unbot.me/issues"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --port=5173 --host",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:migrate": "drizzle-kit generate --config=.config/drizzle.json",
    "lint": "pnpm lint:eslint --fix && pnpm lint:stylelint --fix",
    "lint:eslint": "eslint --config .config/eslint.mjs",
    "lint:stylelint": "stylelint \"**/*.{css,scss,sass}\" --config .config/stylelint.json"
  },
  "devDependencies": {
    "@nuxt/eslint": "^0.5.0",
    "@nuxt/icon": "^1.4.5",
    "@nuxtjs/color-mode": "^3.4.2",
    "@nuxtjs/sitemap": "^5.3.5",
    "@types/bootstrap": "^5.2.10",
    "better-sqlite3": "^11.1.2",
    "drizzle-kit": "^0.24.0",
    "drizzle-orm": "^0.33.0",
    "eslint": "^9.9.0",
    "nuxt": "^3.12.4",
    "nuxt-auth-utils": "^0.3.2",
    "sass": "^1.77.8",
    "stylelint": "^16.8.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@primevue/nuxt-module": "^4.0.4",
    "bootstrap": "^5.3.3",
    "primeicons": "^7.0.0",
    "socket.io-client": "^4.7.5"
  },
  "packageManager": "pnpm@9.7.0"
}
